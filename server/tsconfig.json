{
	"compilerOptions": {
		"module": "CommonJS",
		"esModuleInterop": true,
		"target": "ESNext",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": false,
		"outDir": "dist",
		"baseUrl": ".",
		"lib": ["ESNext"],
		"paths": {
			"*": ["node_modules/*"]
		},
		"types": ["./", "jest"]
	},
	"include": ["src/**/*"]
}
